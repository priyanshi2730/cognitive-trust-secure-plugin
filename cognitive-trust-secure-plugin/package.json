{
  "name": "cognitive-trust-secure-plugin",
  "displayName": "Cognitive Trust Secure Plugin",
  "description": "VS Code extension that detects insecure code using Semgrep and provides security fixes.",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cognitiveTrust.runScan",
        "title": "Run Semgrep Scan"
      },
      {
        "command": "cognitiveTrust.fixIssue",
        "title": "Fix Insecure Code"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}